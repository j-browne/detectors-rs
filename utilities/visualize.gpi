if (ARGC < 1) {
  print "Usage: gunplot -e \"call '", ARG0, "' '<data_file>'\" -";
  exit;
}

print ARG1;
filename = ARG1;

set hidden3d nooffset;
set view equal xyz;
set xyplane relative 0;
set view 75,315;
set ylabel "z";
set xlabel "x";
set zlabel "y";
set tmargin screen 1;
set bmargin screen 0.1;
set lmargin screen 0.2;
set rmargin screen 0.9;

stats filename nooutput;
splot for [i=0:STATS_blocks] filename u 1:3:2 index i w l t sprintf("%d", i);
